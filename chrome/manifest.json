{
    "manifest_version": 3,
    "name": "Litmus News",
    "version": "0.0.0",
    "author": "KTH Team Crane",
    "background": {
        "service_worker": "./scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.google.com/"],
            "js": ["./scripts/content_script.js"],
            "run_at": "document_idle",
            "world": "ISOLATED"
        }
    ],
    "icons": {
        "128": "./assets/image.png"
    },
    "action": {
        "default_popup": "./popup/index.html"
    },
    "permissions": ["tabs"]
}